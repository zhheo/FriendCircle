@font-face
  font-family 'SAOUI'
  src url('https://cdn.jsdelivr.net/npm/akilar-candyassets/fonts/SAOUI.ttf')
  font-display swap
#fcircleMoreBtn
  width 90%
  max-width: 720px
  height 30px
  margin: auto
  background rgba(249, 249, 249, 0.8)
  color rgba(60, 60, 61,0.7)
  box-shadow 2px 2px 10px #888888
  border-radius 5px
  font-weight bolder
  text-align: center
  display: flex
  flex-direction: column
  justify-content: space-around
#fcircleContainer
  font-family 'SAOUI'!important
  width 100%
  max-width: 800px
  height auto
  margin: auto
  a
    text-decoration: none
  #fMessageBoard
    font-size: 20px
    background rgba(249, 249, 249, 0.8)
    color rgba(60, 60, 61,0.7)
    border-radius 5px
    font-weight bolder
    box-shadow 2px 2px 10px #888888
    font-family 'SAOUI'!important
    width 90%
    margin: 20px 5%
    height 260px
    overflow: hidden
    .fUpdatedTime
      padding-top: 10px
      text-align: center
      height: 30px
    .fMessageItem
      background rgba(207, 207, 207, 0.8)
      box-shadow 0px 0px 15px rgb(188, 188, 188) inset
      .fItem
        height: 60px
        background transparent
        display: flex
        .fLabel
          padding: 0 3%
          align-self: center
          text-align: center
          width: 19%
          overflow hidden
        .fMeasureBar
          align-self: center
          text-align: center
          height: 60px
          width: 50%
        .fMessage
          align-self: center
          text-align: center
          padding: 0 3%
          width: 19%
  .fArticleItem
    margin 20px 5%
    height: 150px
    display: flex
    background rgba(249, 249, 249, 0.8)
    color rgba(60, 60, 61,0.7)
    border-radius 5px
    font-weight bolder
    box-shadow 2px 2px 10px #888888
    overflow: hidden
    .fArticleAvatar
      width: 30%
      display: flex
      flex-direction: column
      .fAvatar
        align-self: center
        text-align: center
        img
          width 75px
          height 75px
          margin: 15px 5px
          border-radius 25px
      .fArticleAuthor
        width: 80%;
        margin: 3px 0px;
        align-self: center;
        text-align: center;
        // background: #ffa500;
        transform: skewX(-10deg);
        height: 22px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    .fArticleMessage
      display: flex
      flex-direction: column
      width: 70%
      a.fArticleTitle
        align-self: center;
        text-align: center;
        // background: rgba(207,207,207,0.8);
        // box-shadow: 0px 0px 15px #bcbcbc inset;
        font-size: 20px;
        line-height: 40px;
        width: 80%;
        padding: 0 10%
        color rgba(60, 60, 61,0.7)
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        &:hover
          &:before
            // line-height: 30px
            position: fixed
            width:fit-content
            max-width: 80%
            margin:auto
            left:0;
            right:0
            top:10%
            border-radius: 10px
            text-align: center
            z-index: 100
            content: attr(data-title)
            font-size: 20px
            color: #fff
            padding: 10px
            background-color: rgba(60, 60, 61,0.7)
            white-space: break-spaces


      .fArticleTime
        width: 100%;
        height: 110px;
        text-align: center;
        display: flex
        .fArticleCreated
          // background: green
          width: 40%;
          margin: 5% 0% 5% 10%;
          text-align: center;
          align-self: center;
          padding: 15px 0;

        .fArticleUpdated
          // background: #ff0;
          width: 40%;
          margin: 5% 10% 5% 0%;
          text-align: center;
          align-self: center;
          padding: 15px 0;
        i
          &:before
            margin-right: 5px
@media screen and (max-width: 768px)
  #fcircleContainer
    #fMessageBoard
      font-size: 16px
@media screen and (max-width: 400px)
  #fcircleContainer
    .fArticleItem
      .fArticleMessage
        .fArticleTime
          i
            display: none
